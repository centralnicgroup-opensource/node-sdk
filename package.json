{
  "name": "@hexonet/ispapi-apiconnector",
  "description": "Node.js SDK for the insanely fast HEXONET API",
  "version": "5.2.0",
  "private": false,
  "author": {
    "name": "Kai Schwarz",
    "email": "kschwarz@hexonet.net"
  },
  "main": "dist/index.js",
  "license": "MIT",
  "engines": {
    "node": ">=8.3.0"
  },
  "homepage": "https://github.com/hexonet/node-sdk",
  "repository": "github:hexonet/node-sdk",
  "bugs": "https://github.com/hexonet/node-sdk/issues",
  "maintainers": [
    {
      "name": "Kai Schwarz",
      "email": "kschwarz@hexonet.net"
    }
  ],
  "keywords": [
    "hexonet",
    "domain",
    "api",
    "connector",
    "isp",
    "ispapi",
    "ssl",
    "cert",
    "dns",
    "backorder",
    "premium",
    "preregistration",
    "registration",
    "application"
  ],
  "nyc": {
    "reporter": [
      "html",
      "text"
    ],
    "exclude": [
      "**/*.spec.js",
      "test-check-helper.js",
      "test-commands.js"
    ]
  },
  "scripts": {
    "build": "tsc --version && tsc",
    "documentation": "npm run documentation_docco --silent && npm run documentation_typedoc --silent",
    "documentation_docco": "docco -l parallel -o docs/docco src/*.ts",
    "documentation_typedoc": "typedoc --out docs/typedoc --name @hexonet/ispapi-apiconnector --readme ./README.md --mode file --includeDeclarations --excludeExternals src/*.ts",
    "lint": "eslint --fix --config=./.eslintrc.js *.js README.md *.json test/*.spec.js",
    "test": "cross-env NODE_ENV=development nyc ./node_modules/.bin/_mocha --opts mocha.opts $(find ./test -type f -name '*.spec.js')"
  },
  "devDependencies": {
    "@semantic-release/changelog": "3.0.1",
    "@semantic-release/git": "7.0.6",
    "@semantic-release/github": "5.0.6",
    "@semantic-release/npm": "5.1.2",
    "@types/lodash": "^4.14.116",
    "@types/request": "2.48.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "cross-env": "5.2.0",
    "dirty-chai": "2.0.1",
    "docco": "0.8.0",
    "eslint": "5.11.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-json": "1.3.2",
    "eslint-plugin-markdown": "1.0.0-rc.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "istanbul": "0.4.5",
    "jsdoc": "3.5.5",
    "jsdoc-oblivion": "0.0.9",
    "mocha": "5.2.0",
    "nock": "10.0.1",
    "nyc": "13.1.0",
    "semantic-release": "^15.10.5",
    "supertest": "3.3.0",
    "tslint": "5.12.0",
    "typedoc": "0.13.0",
    "typescript": "3.2.2",
    "travis-deploy-once": "5.0.9"
  },
  "dependencies": {
    "request": "2.88.0"
  },
  "release": {
    "debug": false,
    "generateNotes": {
      "preset": "angular"
    },
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "HISTORY.md"
      },
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "HISTORY.md",
          "package.json",
          "package-lock.json",
          "npm-shrinkwrap.json",
          "docs",
          "dist"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
